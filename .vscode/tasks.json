{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ compile single file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "defualt task"
        }
    ],
    "version": "2.0.0"
}